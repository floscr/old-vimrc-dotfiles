# Show the first 10 
function hgl() {

  # Get the terminal line height minus 
  local terminal_height="$(expr $(tput lines) - 8)"
  local i=0

  clear

  # Read as many log lines that fit the screen
  hg log --style=/Users/$(whoami)/.code/mercurial-cli-templates/map-cmdline.slog -g  | while read CMD; do

    if [ $i -le $terminal_height ]; then
      echo "$CMD" 
    fi
    (( i++ ))

  done

}

function hgb() { hg up $1 } # Checkout mercurial brach
function hgc() { hg commit $1 } # Checkout mercurial brachz