snippet if "if"
if (${1:true})
  $0
endif
endsnippet

snippet fun "function"
function! ${1:function_name}()
  $0
endfunction
endsnippet

snippet c "Command Snippet"
function! ${1:function_name}()
  $0
endfunction
command! $1 :call $1()
endsnippet

snippet < "Comment Header Start"
" $0 {{{
" -----------------------------------------------------------------------------
endsnippet

snippet > "Comment Header End"
" }}}
endsnippet
